{
  "name": "react-relink",
  "version": "3.1.3",
  "description": "A lightweight state management library for React.",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "react-native": "lib/native/index.js",
  "unpkg": "lib/umd/index.js",
  "files": [
    "lib"
  ],
  "types": "lib/types/index.d.ts",
  "scripts": {
    "deps": "yarn ts-node ./scripts/update-project-dependencies",
    "clean": "rm -rf .cache ./dist ./lib ./temp ./yarn-error.log",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:path": "eslint",
    "playground:web": "parcel playground/web/index.html --port 3000",
    "debug": "scope=\"debug\" jest -c ./jest.config.ts",
    "debug:src": "scope=\"debug\" jest ./src -c ./jest.config.ts",
    "debug:i": "scope=\"debug\" jest ./tests/integration -c ./jest.config.ts",
    "debug:isolated": "scope=\"debug\" jest ./tests/integration/~temp-isolated -c ./jest.config.ts",
    "rollup": "rollup -c ./config/rollup.config.js",
    "types": "tsc --declaration",
    "api": "api-extractor run -c ./config/api-extractor.json --local --verbose",
    "build": "yarn rollup && yarn types && yarn api && yarn ts-node ./scripts/post-process-docs",
    "postbuild": "rm -r ./temp/tsc",
    "test": "jest -c ./jest.config.ts",
    "test:bundled": "scope=\"bundled\" jest -c ./jest.config.ts",
    "preall": "yarn clean",
    "all": "yarn lint:fix && yarn build && yarn test && yarn pack",
    "ci:test": "yarn lint && yarn build && yarn test"
  },
  "keywords": [
    "react",
    "reducers",
    "relink",
    "state",
    "set state",
    "state management"
  ],
  "author": "glyph-cat",
  "readme": "README.md",
  "license": "MIT",
  "homepage": "https://github.com/glyph-cat/react-relink#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/glyph-cat/react-relink.git"
  },
  "bugs": {
    "url": "https://github.com/glyph-cat/react-relink/issues"
  },
  "dependencies": {
    "use-sync-external-store": "^1.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@glyph-cat/eslint-config": "^1.0.0-alpha.0",
    "@glyph-cat/react-test-utils": "^0.1.3-experimental.0",
    "@jest/types": "^28.1.0",
    "@microsoft/api-extractor": "^7.23.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/react-native": "^0.67.6",
    "@types/react-test-renderer": "^18.0.0",
    "@types/use-sync-external-store": "^0.0.3",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "parcel-bundler": "^1.12.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-native": "^0.68.2",
    "react-test-renderer": "^18.1.0",
    "rollup": "^2.72.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "typescript": "^4.6.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
