{
  "name": "react-relink",
  "version": "1.0.0-beta.2",
  "description": "A React state management library inspired by Recoil.",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "react-native": "dist/native/index.js",
  "unpkg": "dist/umd/index.js",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./temp ./yarn-error.log && mkdir temp dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "debug": "scope=\"debug\" jest -c ./jest.config.ts",
    "types": "tsc --declaration",
    "rollup": "rollup -c ./config/rollup.config.js",
    "build": "yarn rollup && yarn types && yarn api",
    "postbuild": "rm -r ./temp/tsc",
    "api": "api-extractor run -c ./config/api-extractor.json --local --verbose",
    "test": "jest -c ./jest.config.ts",
    "test:bundled": "scope=\"bundled\" jest -c ./jest.config.ts",
    "all": "yarn lint:fix && yarn build && yarn test && yarn pack",
    "ci:test": "yarn lint && yarn build && yarn test"
  },
  "keywords": [
    "react",
    "recoil",
    "relink",
    "state",
    "set state",
    "state management"
  ],
  "author": "chin98edwin",
  "readme": "README.md",
  "license": "MIT",
  "homepage": "https://github.com/chin98edwin/react-relink#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/chin98edwin/react-relink.git"
  },
  "bugs": {
    "url": "https://github.com/chin98edwin/react-relink/issues"
  },
  "peerDependencies": {},
  "dependencies": {
    "fast-copy": "^2.1.1",
    "react-fast-compare": "^3.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@chin98edwin/eslint-plugin": "^0.0.0-experimental.6",
    "@chin98edwin/react-test-utils": "^0.0.0-experimental.2",
    "@microsoft/api-extractor": "^7.18.11",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.24",
    "@types/react-test-renderer": "^17.0.1",
    "eslint": "^7.32.0",
    "jest": "^27.2.3",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "typescript": "^4.4.3"
  }
}
