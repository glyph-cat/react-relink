{
  "name": "react-relink",
  "version": "0.2.0",
  "description": "A React state management library inspired by Recoil.",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "react-native": "dist/native/index.js",
  "unpkg": "dist/umd/index.js",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "types": "index.d.ts",
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rollup -c rollup.config.js",
    "debug": "scope=\"debug\" jest -c jest.config.js",
    "test": "jest -c jest.config.js",
    "test:bundled": "scope=\"bundled\" jest -c jest.config.js",
    "all": "npm run format && npm run lint:fix && npm run build && npm test && npm pack"
  },
  "keywords": [
    "react",
    "recoil",
    "relink",
    "state",
    "set state",
    "state management"
  ],
  "author": "chin98edwin",
  "readme": "README.md",
  "license": "MIT",
  "homepage": "https://github.com/chin98edwin/react-relink#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/chin98edwin/react-relink.git"
  },
  "bugs": {
    "url": "https://github.com/chin98edwin/react-relink/issues"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.22",
    "eslint": "^7.24.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "moment": "^2.29.1",
    "prettier": "^2.2.1",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.64.0",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.45.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "fast-copy": "^2.1.1",
    "react-fast-compare": "^3.2.0"
  }
}
