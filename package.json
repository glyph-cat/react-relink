{
  "name": "react-relink",
  "version": "1.0.0-beta.4",
  "description": "A lightweight state management library for React.",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "react-native": "lib/native/index.js",
  "unpkg": "lib/umd/index.js",
  "files": [
    "lib",
    "index.d.ts"
  ],
  "types": "lib/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf .cache ./dist ./lib ./temp ./yarn-error.log && mkdir temp lib",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "playground": "parcel playground/index.html --port 3000",
    "debug": "scope=\"debug\" jest -c ./jest.config.ts",
    "debug:src": "scope=\"debug\" jest ./src -c ./jest.config.ts",
    "debug:i": "scope=\"debug\" jest ./tests/integration -c ./jest.config.ts",
    "debug:isolated": "scope=\"debug\" jest ./tests/integration/~temp-isolated -c ./jest.config.ts",
    "rollup": "rollup -c ./config/rollup.config.js",
    "types": "tsc --declaration",
    "api": "api-extractor run -c ./config/api-extractor.json --local --verbose",
    "build": "yarn rollup && yarn types && yarn api",
    "postbuild": "rm -r ./temp/tsc",
    "test": "jest -c ./jest.config.ts",
    "test:bundled": "scope=\"bundled\" jest -c ./jest.config.ts",
    "preall": "yarn clean",
    "all": "yarn lint:fix && yarn build && yarn test && yarn pack",
    "ci:test": "yarn lint && yarn build && yarn test"
  },
  "keywords": [
    "react",
    "reducers",
    "relink",
    "state",
    "set state",
    "state management"
  ],
  "author": "chin98edwin",
  "readme": "README.md",
  "license": "MIT",
  "homepage": "https://github.com/chin98edwin/react-relink#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/chin98edwin/react-relink.git"
  },
  "bugs": {
    "url": "https://github.com/chin98edwin/react-relink/issues"
  },
  "peerDependencies": {},
  "dependencies": {
    "fast-copy": "^2.1.1",
    "react-fast-compare": "^3.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@chin98edwin/eslint-plugin": "^0.0.0-experimental.6",
    "@chin98edwin/react-test-utils": "^0.1.0-experimental.0",
    "@microsoft/api-extractor": "^7.18.13",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "eslint": "^7.32.0",
    "jest": "^27.2.4",
    "parcel-bundler": "^1.12.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.66.0",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.3",
    "typescript": "^4.4.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
